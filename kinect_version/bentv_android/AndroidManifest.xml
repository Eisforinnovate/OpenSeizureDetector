<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.org.openseizuredetector.bentv"
    android:versionCode="1"
    android:versionName="1.0" >
  <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        >
        <activity
            android:name="uk.org.openseizuredetector.bentv.MainActivity"
	    android:label="@string/app_name" 
	    android:screenOrientation="landscape" 
	    >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
	<activity
	    android:name="uk.org.openseizuredetector.bentv.PrefActivity"
	    android:label="benTV Settings"
	    android:parentActivityName="uk.org.openseizuredetector.bentv.MainActivity"
	    >
	</activity>
	<activity
	    android:name="uk.org.openseizuredetector.bentv.WebCamActivity"
	    android:label="WebCam Activity"
	    android:parentActivityName="uk.org.openseizuredetector.bentv.MainActivity"
	    >
	</activity>
    </application>

</manifest>
